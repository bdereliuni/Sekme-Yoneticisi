{
  "manifest_version": 3,
  "name": "Modern Sekme Yöneticisi",
  "version": "1.0",
  "description": "Gelişmiş sekme yönetim ve organizasyon aracı",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
} 